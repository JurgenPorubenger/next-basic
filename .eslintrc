{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["standard", "prettier", "eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["import", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "jsxSingleQuote": true
      }
    ],
    "no-unused-vars": "off"
  }
}